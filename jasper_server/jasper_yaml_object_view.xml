<openerp>
    <data>

        <record id="view_jasper_yaml_object_form" model="ir.ui.view">
            <field name="name">view_jasper_yaml_object_form</field>
            <field name="model">jasper.yaml_object</field>
            <field name="arch" type="xml">
                <form string="Jasper YAML Object" version="7.0">

                    <header></header>
                    <sheet>

                         <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1><field name="name"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="model"/>
                                <field name="domain" />
                                <field name="offset" />
                            </group>
                            <group>
                                <field name="limit" />
                                <field name="order" />
                                <field name="yaml_user_id" />
                                <field name="yaml_context" />
                            </group>
                        </group>
                        
                        <field name="fields" colspan="4" />

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>