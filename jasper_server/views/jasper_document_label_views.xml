<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_jasper_document_label_tree" model="ir.ui.view">
            <field name="name">jasper.document.label.tree</field>
            <field name="model">jasper.document.label</field>
            <field name="arch" type="xml">
                <tree string="Label">
                    <field name="name"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <record id="view_jasper_document_label_form" model="ir.ui.view">
            <field name="name">jasper.document.label.form</field>
            <field name="model">jasper.document.label</field>
            <field name="arch" type="xml">
                <form string="Label">
                    <group>
                        <field name="name" />
                        <field name="value" />
                    </group>
                    <separator string="Legend" colspan="4"/>
                    <group>
                        <label align="0.0" string="All label are pass as parameter to the JasperServer, and start with I18N_" colspan="4"/>
                        <label align="0.0" string="These parameters are translate in the language define in the general tab" colspan="4"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
